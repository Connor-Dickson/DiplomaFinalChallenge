@page
@model FinalChallenge.IndexModel

@{
    ViewData["Title"] = "Index";
}

@{ decimal Total = 0; }



<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
@Html.ActionLink("Upcoming", "future")
@Html.ActionLink("Past", "past")
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].dateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].payingMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].amtPaid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Game)
        {
            if (item.dateTime > DateTime.Now)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.venue)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
            if (item.dateTime < DateTime.Now)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.venue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.payingMember)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.amtPaid)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
